{
  // two spaces
  "editor.tabSize": 2,
  // keep certain folders and files out of the way
  "files.exclude": {
      "**/__pycache__/": true
  },
  // python tests
  "python.testing.unittestArgs": [
      "-v",
      "-s",
      ".",
      "-p",
      "*_test.py"
  ],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true
}